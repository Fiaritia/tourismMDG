<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.PreferencesActivity">

    <!-- Header Fragment -->

    <!-- Bottom Row: Photo List (2x2 Grid) -->

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/headerFragment"
        android:name="com.example.tourismmdg.fragments.HeaderFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@id/photoImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_header" />

    <ImageView
        android:id="@+id/photoImageView"
        android:layout_width="75dp"
        android:layout_height="88dp"
        android:src="@drawable/ic_add_comment"
        app:layout_constraintBottom_toTopOf="@id/modeToggleImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.192"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerFragment"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="227dp"
        android:layout_height="37dp"
        android:text="Nom et prenom"
        app:layout_constraintTop_toTopOf="@id/photoImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/photoImageView"
        app:layout_constraintTop_toBottomOf="@id/headerFragment" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="225dp"
        android:layout_height="39dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="68dp"
        android:text="Username"
        app:layout_constraintBottom_toTopOf="@id/photoImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/photoImageView"
        app:layout_constraintTop_toBottomOf="@id/headerFragment"/>

    <ImageView
        android:id="@+id/modeToggleImageView"
        android:layout_width="34dp"
        android:layout_height="43dp"
        android:layout_margin="16dp"
        android:contentDescription="Toggle Day/Night Mode"
        android:src="@drawable/ic_day_mode"
        app:layout_constraintBottom_toTopOf="@id/likesSection"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="190dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/likesSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="279dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/likesIconImageView"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_like" />

        <TextView
            android:id="@+id/likesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/commentsIconImageView"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_comments" />

        <TextView
            android:id="@+id/commentsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Comments: 0"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/photoListRecyclerView"
        android:layout_width="359dp"
        android:layout_height="437dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/likesSection"
        app:spanCount="2"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="362dp"
        tools:ignore="MissingConstraints">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/footerFragment2"
        android:name="com.example.tourismmdg.fragments.NavbarFragment"
        android:layout_width="419dp"
        android:layout_height="71dp"
        tools:layout="@layout/fragment_navbar"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-6dp"
        tools:layout_editor_absoluteY="870dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>